<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textBox_background">
        <item name="background">@color/light_grey</item>
        <item name="alpha">50</item>
    </style>

    <style name="ButtonPrimaryStyle">
        <item name="cornerRadius">16dp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundColor">@color/primary_blue</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="ButtonWithoutPadding">
        <item name="cornerRadius">16dp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="PopupStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/light_grey</item>
        <item name="android:dropDownHorizontalOffset">15dp</item>
        <item name="android:dropDownVerticalOffset">1dp</item>
    </style>

    <style name="DialogSlideAnim" >
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black_60_trans</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black_60_trans</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <color name="black_60_trans">#99000000</color>
</resources>